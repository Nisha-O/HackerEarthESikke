
    <div class="container" style = "margin-left:34% !important">    
        <div id="loginbox" style="margin-top:84px;margin-left:-8%;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Sign In</div>
                        <%= flash[:error]  %>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"></div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                            
                        <%= form_for @user, :url=>"/signin", :method=>:post  do |user_form| %>
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <div class="col-md-9">
                                        <%= user_form.email_field :email ,:class=>"form-control"  ,:placeholder=> "username or email"%>
                                        </div>                                        
                                    </div>
                                
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <div class="col-md-9">
                                        <%= user_form.password_field :password ,:class=>"form-control",:placeholder=>"password"%>
                                      </div>
                                    </div>



                          <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon">Authentication Code</span>
                            <input type="text" name="authentication_code" value="" placeholder="Authenticator Code" class="form-control">

                          </div>
                                
                            <div class="input-group">

                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                      <%= user_form.submit :class=>"btn btn-success", :value=>"login" %>
                                      <a id="btn-signup" href="/signup" class="btn btn-primary">Sign Up Here</a>

                                    </div>
                                </div>
   
                              <%end%>
                        </div>                     
                    </div>  
        </div>
    </div>
  </div>
    